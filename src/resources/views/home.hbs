{{#each course}}
    <div class="card" style="width: 18rem;">
        <a href="/courses/{{this.slug}}">
            <img
                class="card-img-top"
                src="{{this.image}}"
                alt="Card image cap"
            />
        </a>
        <div class="card-body">
            <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua</a>
        </div>
    </div>
{{/each}}